<div id="<%= dom_id mailbox %>">
  <p class="my-5">
    <strong class="block font-medium mb-1"><%= t('.address') %>:</strong>
    <%= mailbox.mail_address %>
  </p>
  <p class="my-5">
    <strong class="block font-medium mb-1"><%= t('.server') %>:</strong>
    <%= mailbox.server %>
  </p>
  <p class="my-5">
    <strong class="block font-medium mb-1"><%= t('.port') %>:</strong>
    <%= mailbox.port %>
  </p>
  <p class="my-5">
    <strong class="block font-medium mb-1"><%= t('.verify_ssl') %>:</strong>
    <%= mailbox.verify_ssl %>
  </p>
  <p class="my-5">
    <strong class="block font-medium mb-1"><%= t('.disable_ssl_tls') %>:</strong>
    <%= mailbox.disable_ssl_tls %>
  </p>
  <% if action_name != "show" %>
    <%= link_to t('.link_show_mailbox'), mailbox, class: 'rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium' %>
    <%= link_to t('.link_edit_mailbox'), edit_mailbox_path(mailbox), class: 'rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium' %>
    <hr class="mt-6">
  <% end %>
</div>
