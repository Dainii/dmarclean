<%= form_with(model: mailbox, class: 'contents') do |form| %>
  <% if mailbox.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(mailbox.errors.count, 'error') %> <%= t('.error_message') %>:</h2>
      <ul>
        <% mailbox.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="my-5">
    <%= form.label :mail_address %>
    <%= form.text_field :mail_address, class: 'block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full' %>
  </div>
  <div class="my-5">
    <%= form.label :password %>
    <%= form.password_field :password, class: 'block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full' %>
  </div>
  <div class="my-5">
    <%= form.label :server %>
    <%= form.text_field :server, class: 'block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full' %>
  </div>
  <div class="my-5">
    <%= form.label :port %>
    <%= form.number_field :port, class: 'block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full' %>
  </div>
  <div class="my-5">
    <%= form.label :verify_ssl %>
    <%= form.check_box :verify_ssl, class: 'block mt-2 h-5 w-5' %>
  </div>
  <div class="my-5">
    <%= form.label :disable_ssl_tls %>
    <%= form.check_box :disable_ssl_tls, class: 'block mt-2 h-5 w-5' %>
  </div>
  <div class="inline">
    <%= form.submit class: 'rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer' %>
  </div>
<% end %>
