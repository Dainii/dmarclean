<% case status %>
<% when 'completed' %>
  <p class="rounded-md whitespace-nowrap mt-0.5 px-1.5 py-0.5 text-xs font-medium ring-1 ring-inset text-green-700 dark:text-gray-800 bg-green-50 dark:bg-green-500 ring-green-600/20"><%= status %></p>
<% when 'failed' %>
  <p class="rounded-md whitespace-nowrap mt-0.5 px-1.5 py-0.5 text-xs font-medium ring-1 ring-inset text-red-700 first-letter:dark:text-gray-800 bg-red-50 dark:bg-red-500 ring-red-600/20"><%= status %></p>
<% when 'queued' %>
  <p class="rounded-md whitespace-nowrap mt-0.5 px-1.5 py-0.5 text-xs font-medium ring-1 ring-inset text-yellow-700 dark:text-gray-800 bg-yellow-50 dark:bg-yellow-500 ring-yellow-600/20"><%= status %></p>
<% else %>
  <p class="rounded-md whitespace-nowrap mt-0.5 px-1.5 py-0.5 text-xs font-medium ring-1 ring-inset text-gray-700 dark:text-gray-800 bg-gray-50 dark:bg-gray-500 ring-red-600/20"><%= status %></p>
<% end %>
