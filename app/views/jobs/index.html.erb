<div class="relative isolate overflow-hidden pt-16">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>
  <div id="jobs" class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <ul role="list" class="divide-y divide-gray-100">
      <% @jobs.each do |job| %>
        <li class="flex items-center justify-between gap-x-6 py-5">
          <div class="min-w-0">
            <div class="flex items-start gap-x-3">
              <p class="text-sm font-semibold leading-6 text-gray-900 dark:text-gray-200"><%= job.name %></p>
              <%= render partial: 'jobs/job_status_badge', locals: { status: job_status(job.status) } %>
            </div>
            <div class="mt-1 flex items-center gap-x-2 text-xs leading-5 text-gray-500">
              <p class="whitespace-nowrap">Scheduled at <time><%= format_date(job.solid_queue_job.scheduled_at) %></time></p>
              <svg viewBox="0 0 2 2" class="h-0.5 w-0.5 fill-current">
                <circle cx="1" cy="1" r="1" />
              </svg>
              <p class="whitespace-nowrap">Finished at <time><%= format_date(job.solid_queue_job.finished_at) %></time></p>
            </div>
          </div>
          <div class="flex flex-none items-center gap-x-4">
            <%= link_to 'Show this job', job, class: 'rounded-md bg-white px-2.5 py-1.5 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 sm:bloc' %>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
